programa
{
	
	funcao inicio()
	{
		inteiro metros
		inteiro litros 
		inteiro lata 


		escreva ("quantos metros tem sua parede :")
		leia (metros)

           litros = metros / 3 
           lata = litros / 18
        


		escreva (" vai se usar ", litros , " litros de tinta ")

       se (lata == 0){
           escreva (" você tera que comprar uma lata de 18 litros \n que custa 480 reais")
       } senao {    
		escreva ( " você vai ter que comprar ", lata, " latas de 18 litros ")

		escreva (" o valor total é ", lata * 480)
       }
		


           

		
	}
}
